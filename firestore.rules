rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura e escrita em transmitters
    match /transmitters/{transmitterId} {
      allow read, write: if true;
    }
    
    // Permitir leitura e escrita em signals
    match /signals/{signalId} {
      allow read, write: if true;
    }
  }
}
